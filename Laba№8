package org.example;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;
import java.io.*;
import java.net.*;
import java.util.Scanner;

/**
 * –ü–†–û–ì–†–ê–ú–ú–ê –î–õ–Ø –ü–û–ò–°–ö–ê –ò –°–ö–ê–ß–ò–í–ê–ù–ò–Ø –§–ê–ô–õ–û–í –° –°–ê–ô–¢–û–í
 * –°–Ω–∞—á–∞–ª–∞ –ø–∞—Ä—Å–∏—Ç —Å—Ç—Ä–∞–Ω–∏—Ü—É, –Ω–∞—Ö–æ–¥–∏—Ç —Å—Å—ã–ª–∫–∏, –ø–æ—Ç–æ–º —Å–∫–∞—á–∏–≤–∞–µ—Ç
 */
public class ParserDownloader {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("üéµ –ü–†–û–ì–†–ê–ú–ú–ê –î–õ–Ø –°–ö–ê–ß–ò–í–ê–ù–ò–Ø –ú–£–ó–´–ö–ò/–§–ê–ô–õ–û–í üéµ");package org.example;

import java.io.*;
import java.net.*;

/**
 * –ü–†–û–°–¢–û–ô –ó–ê–ì–†–£–ó–ß–ò–ö –§–ê–ô–õ–û–í - –ö–û–ù–°–û–õ–¨–ù–ê–Ø –í–ï–†–°–ò–Ø
 * –≠—Ç–æ—Ç –∫–ª–∞—Å—Å —Å–∫–∞—á–∏–≤–∞–µ—Ç —Ñ–∞–π–ª –ø–æ —É–∫–∞–∑–∞–Ω–Ω–æ–º—É URL
 *
 * –ö–∞–∫ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞—Ç—å:
 * 1. –ó–∞–ø—É—Å—Ç–∏—Ç–µ —ç—Ç–æ—Ç —Ñ–∞–π–ª
 * 2. –ò–∑–º–µ–Ω–∏—Ç–µ URL –∏ –ø—É—Ç—å —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –≤ –∫–æ–¥–µ
 * 3. –ó–∞–ø—É—Å—Ç–∏—Ç–µ —Å–Ω–æ–≤–∞
 */
public class SimpleDownloader {

    public static void main(String[] args) {
        System.out.println("=== –ó–ê–ü–£–°–ö –ü–†–û–ì–†–ê–ú–ú–´ –î–õ–Ø –°–ö–ê–ß–ò–í–ê–ù–ò–Ø –§–ê–ô–õ–û–í ===");
        System.out.println();

        // –¢–µ—Å—Ç–æ–≤—ã–π –Ω–µ–±–æ–ª—å—à–æ–π —Ñ–∞–π–ª
        String fileUrl = "https://www.learningcontainer.com/wp-content/uploads/2020/04/sample-text-file.txt";

        // –ö–∞—Ä—Ç–∏–Ω–∫–∞ –¥–ª—è —Ç–µ—Å—Ç–∞:
        // String fileUrl = "https://www.gravatar.com/avatar/205e460b479e2e5b48aec07710c08d50?s=200";

        String savePath = "downloaded_file.txt"; // –°–æ—Ö—Ä–∞–Ω–∏—Ç –≤ –ø–∞–ø–∫–µ –ø—Ä–æ–µ–∫—Ç–∞

        try {
            System.out.println("üöÄ –ù–∞—á–∏–Ω–∞–µ–º —Å–∫–∞—á–∏–≤–∞–Ω–∏–µ...");
            System.out.println("üì• URL: " + fileUrl);
            System.out.println("üíæ –°–æ—Ö—Ä–∞–Ω—è–µ–º –∫–∞–∫: " + savePath);
            System.out.println();

            // –®–ê–ì 3: –°–ö–ê–ß–ò–í–ê–ï–ú –§–ê–ô–õ
            downloadFile(fileUrl, savePath);

            System.out.println();
            System.out.println("‚úÖ –§–∞–π–ª —É—Å–ø–µ—à–Ω–æ —Å–∫–∞—á–∞–Ω!");
            System.out.println("üìÅ –§–∞–π–ª –Ω–∞—Ö–æ–¥–∏—Ç—Å—è: " + new File(savePath).getAbsolutePath());

        } catch (Exception e) {
            System.err.println("‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–∫–∞—á–∏–≤–∞–Ω–∏–∏: " + e.getMessage());
            System.out.println("üîß –í–æ–∑–º–æ–∂–Ω—ã–µ —Ä–µ—à–µ–Ω–∏—è:");
            System.out.println("   1. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –∏–Ω—Ç–µ—Ä–Ω–µ—Ç-—Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ");
            System.out.println("   2. –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ URL –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π");
            System.out.println("   3. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –ø—Ä–∞–≤–∞ –Ω–∞ –∑–∞–ø–∏—Å—å –≤ –ø–∞–ø–∫—É");
        }
    }

    /**
     * –û–°–ù–û–í–ù–û–ô –ú–ï–¢–û–î –î–õ–Ø –°–ö–ê–ß–ò–í–ê–ù–ò–Ø –§–ê–ô–õ–ê
     * @param urlString - –∞–¥—Ä–µ—Å —Ñ–∞–π–ª–∞ –≤ –∏–Ω—Ç–µ—Ä–Ω–µ—Ç–µ
     * @param filename - –∫—É–¥–∞ —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å –Ω–∞ –∫–æ–º–ø—å—é—Ç–µ—Ä–µ
     */
    public static void downloadFile(String urlString, String filename) throws IOException {
        System.out.println("‚è≥ –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ...");

        // 1. –û–¢–ö–†–´–í–ê–ï–ú –°–û–ï–î–ò–ù–ï–ù–ò–ï –° –°–ï–†–í–ï–†–û–ú
        URL url = new URL(urlString);
        HttpURLConnection connection = (HttpURLConnection) url.openConnection();

        // –ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è
        connection.setRequestMethod("GET");
        connection.setConnectTimeout(10000); // 10 —Å–µ–∫—É–Ω–¥ –Ω–∞ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ
        connection.setReadTimeout(30000);    // 30 —Å–µ–∫—É–Ω–¥ –Ω–∞ —á—Ç–µ–Ω–∏–µ

        System.out.println("üîó –ü–æ–¥–∫–ª—é—á–∞–µ–º—Å—è –∫ —Å–µ—Ä–≤–µ—Ä—É...");

        // 2. –ü–†–û–í–ï–†–Ø–ï–ú –û–¢–í–ï–¢ –°–ï–†–í–ï–†–ê
        int responseCode = connection.getResponseCode();
        System.out.println("üì° –ö–æ–¥ –æ—Ç–≤–µ—Ç–∞ —Å–µ—Ä–≤–µ—Ä–∞: " + responseCode);

        if (responseCode != HttpURLConnection.HTTP_OK) {
            throw new IOException("–°–µ—Ä–≤–µ—Ä –≤–µ—Ä–Ω—É–ª –æ—à–∏–±–∫—É: " + responseCode);
        }

        // 3. –£–ó–ù–ê–ï–ú –†–ê–ó–ú–ï–† –§–ê–ô–õ–ê
        long fileSize = connection.getContentLengthLong();
        System.out.println("üìä –†–∞–∑–º–µ—Ä —Ñ–∞–π–ª–∞: " + formatFileSize(fileSize));
        System.out.println();

        // 4. –°–û–ó–î–ê–ï–ú –ü–û–¢–û–ö–ò –î–õ–Ø –ß–¢–ï–ù–ò–Ø –ò –ó–ê–ü–ò–°–ò
        try (BufferedInputStream inputStream = new BufferedInputStream(connection.getInputStream());
             FileOutputStream outputStream = new FileOutputStream(filename)) {

            byte[] buffer = new byte[4096]; // –ë—É—Ñ–µ—Ä 4KB
            int bytesRead;
            long totalBytesRead = 0;
            int percentComplete = 0;

            System.out.println("üì• –°–∫–∞—á–∏–≤–∞–Ω–∏–µ –Ω–∞—á–∞–ª–æ—Å—å...");

            // 5. –ß–ò–¢–ê–ï–ú –î–ê–ù–ù–´–ï –ò –ó–ê–ü–ò–°–´–í–ê–ï–ú –í –§–ê–ô–õ
            while ((bytesRead = inputStream.read(buffer)) != -1) {
                // –ó–∞–ø–∏—Å—ã–≤–∞–µ–º –ø—Ä–æ—á–∏—Ç–∞–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –≤ —Ñ–∞–π–ª
                outputStream.write(buffer, 0, bytesRead);
                totalBytesRead += bytesRead;

                // 6. –ü–û–ö–ê–ó–´–í–ê–ï–ú –ü–†–û–ì–†–ï–°–° (–µ—Å–ª–∏ –∏–∑–≤–µ—Å—Ç–µ–Ω —Ä–∞–∑–º–µ—Ä —Ñ–∞–π–ª–∞)
                if (fileSize > 0) {
                    int newPercent = (int) ((totalBytesRead * 100) / fileSize);

                    // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–æ–≥—Ä–µ—Å—Å —Ç–æ–ª—å–∫–æ –∫–æ–≥–¥–∞ –ø—Ä–æ—Ü–µ–Ω—Ç –∏–∑–º–µ–Ω–∏–ª—Å—è
                    if (newPercent > percentComplete) {
                        percentComplete = newPercent;
                        System.out.printf("   ‚è≥ –ü—Ä–æ–≥—Ä–µ—Å—Å: %3d%% (%s / %s)\n",
                                percentComplete,
                                formatFileSize(totalBytesRead),
                                formatFileSize(fileSize));
                    }
                }
            }

            System.out.println();
            System.out.println("üìä –ò—Ç–æ–≥–æ —Å–∫–∞—á–∞–Ω–æ: " + formatFileSize(totalBytesRead));

        } finally {
            // 7. –ó–ê–ö–†–´–í–ê–ï–ú –°–û–ï–î–ò–ù–ï–ù–ò–ï
            connection.disconnect();
            System.out.println("üîí –°–æ–µ–¥–∏–Ω–µ–Ω–∏–µ –∑–∞–∫—Ä—ã—Ç–æ");
        }
    }

    /**
     * –ü–†–ï–û–ë–†–ê–ó–£–ï–¢ –†–ê–ó–ú–ï–† –§–ê–ô–õ–ê –í –ß–ò–¢–ê–ï–ú–´–ô –§–û–†–ú–ê–¢
     * –ü—Ä–∏–º–µ—Ä: 1024 ‚Üí "1.0 KB"
     */
    private static String formatFileSize(long bytes) {
        if (bytes < 1024) {
            return bytes + " –±–∞–π—Ç";
        } else if (bytes < 1024 * 1024) {
            return String.format("%.1f KB", bytes / 1024.0);
        } else if (bytes < 1024 * 1024 * 1024) {
            return String.format("%.1f MB", bytes / (1024.0 * 1024.0));
        } else {
            return String.format("%.1f GB", bytes / (1024.0 * 1024.0 * 1024.0));
        }
    }
}
        System.out.println("==========================================");
        System.out.println();

        // 1. –ó–ê–ü–†–ê–®–ò–í–ê–ï–ú URL –°–¢–†–ê–ù–ò–¶–´
        System.out.print("üåê –í–≤–µ–¥–∏—Ç–µ URL —Å—Ç—Ä–∞–Ω–∏—Ü—ã —Å —Ñ–∞–π–ª–∞–º–∏: ");
        String pageUrl = scanner.nextLine().trim();

        if (pageUrl.isEmpty()) {
            // URL –¥–ª—è —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
            pageUrl = "https://example.com/music";
            System.out.println("‚ö†Ô∏è –ò—Å–ø–æ–ª—å–∑—É–µ–º —Ç–µ—Å—Ç–æ–≤—ã–π URL: " + pageUrl);
        }

        try {
            System.out.println();
            System.out.println("üîç –ù–∞—á–∏–Ω–∞–µ–º –ø–æ–∏—Å–∫ —Ñ–∞–π–ª–æ–≤ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–µ...");

            // 2. –ü–ê–†–°–ò–ú –°–¢–†–ê–ù–ò–¶–£ –ò –ò–©–ï–ú –°–°–´–õ–ö–ò
            String[] downloadLinks = findDownloadLinks(pageUrl);

            if (downloadLinks.length == 0) {
                System.out.println("‚ùå –§–∞–π–ª—ã –¥–ª—è —Å–∫–∞—á–∏–≤–∞–Ω–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω—ã");
                return;
            }

            System.out.println();
            System.out.println("‚úÖ –ù–∞–π–¥–µ–Ω–æ " + downloadLinks.length + " —Ñ–∞–π–ª–æ–≤:");

            // 3. –ü–û–ö–ê–ó–´–í–ê–ï–ú –ù–ê–ô–î–ï–ù–ù–´–ï –§–ê–ô–õ–´
            for (int i = 0; i < downloadLinks.length; i++) {
                System.out.println("   " + (i + 1) + ". " + getFileName(downloadLinks[i]));
            }

            // 4. –í–´–ë–ò–†–ê–ï–ú –§–ê–ô–õ –î–õ–Ø –°–ö–ê–ß–ò–í–ê–ù–ò–Ø
            System.out.println();
            System.out.print("üì• –ö–∞–∫–æ–π —Ñ–∞–π–ª —Å–∫–∞—á–∞—Ç—å? (–Ω–æ–º–µ—Ä –∏–ª–∏ 0 –¥–ª—è –≤—Å–µ—Ö): ");
            String choice = scanner.nextLine();

            // 5. –°–ö–ê–ß–ò–í–ê–ï–ú –í–´–ë–†–ê–ù–ù–´–ï –§–ê–ô–õ–´
            if (choice.equals("0")) {
                System.out.println("üì¶ –°–∫–∞—á–∏–≤–∞–µ–º –≤—Å–µ —Ñ–∞–π–ª—ã...");
                for (int i = 0; i < downloadLinks.length; i++) {
                    downloadSelectedFile(downloadLinks[i], i + 1);
                }
            } else {
                try {
                    int fileNumber = Integer.parseInt(choice) - 1;
                    if (fileNumber >= 0 && fileNumber < downloadLinks.length) {
                        downloadSelectedFile(downloadLinks[fileNumber], fileNumber + 1);
                    } else {
                        System.out.println("‚ùå –ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –Ω–æ–º–µ—Ä —Ñ–∞–π–ª–∞");
                    }
                } catch (NumberFormatException e) {
                    System.out.println("‚ùå –í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ");
                }
            }

        } catch (Exception e) {
            System.err.println("‚ùå –û—à–∏–±–∫–∞: " + e.getMessage());
            e.printStackTrace();
        } finally {
            scanner.close();
        }
    }

    /**
     * –ò–©–ï–¢ –°–°–´–õ–ö–ò –î–õ–Ø –°–ö–ê–ß–ò–í–ê–ù–ò–Ø –ù–ê –°–¢–†–ê–ù–ò–¶–ï
     */
    private static String[] findDownloadLinks(String pageUrl) throws IOException {
        System.out.println("üìÑ –ó–∞–≥—Ä—É–∂–∞–µ–º —Å—Ç—Ä–∞–Ω–∏—Ü—É: " + pageUrl);

        // –ü–æ–¥–∫–ª—é—á–∞–µ–º—Å—è –∫ —Å—Ç—Ä–∞–Ω–∏—Ü–µ —Å –∏–º–∏—Ç–∞—Ü–∏–µ–π –±—Ä–∞—É–∑–µ—Ä–∞
        Document doc = Jsoup.connect(pageUrl)
                .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36")
                .timeout(15000)
                .get();

        System.out.println("üîé –ê–Ω–∞–ª–∏–∑–∏—Ä—É–µ–º HTML –∫–æ–¥...");

        // –°–ü–ò–°–û–ö –°–ï–õ–ï–ö–¢–û–†–û–í –î–õ–Ø –ü–û–ò–°–ö–ê –°–°–´–õ–û–ö
        String[] cssSelectors = {
                "a[href*='download']",          // –°—Å—ã–ª–∫–∏ —Å "download" –≤ –∞–¥—Ä–µ—Å–µ
                "a[href$='.mp3']",              // –ü—Ä—è–º—ã–µ —Å—Å—ã–ª–∫–∏ –Ω–∞ mp3
                "a[href$='.mp4']",              // –ü—Ä—è–º—ã–µ —Å—Å—ã–ª–∫–∏ –Ω–∞ mp4
                "a[href$='.wav']",              // –ü—Ä—è–º—ã–µ —Å—Å—ã–ª–∫–∏ –Ω–∞ wav
                ".download-link",               // –≠–ª–µ–º–µ–Ω—Ç—ã —Å –∫–ª–∞—Å—Å–æ–º download-link
                ".jp-play",                     // –ö–∞–∫ –≤ –≤–∞—à–µ–º –ø—Ä–∏–º–µ—Ä–µ
                "button[data-url]",             // –ö–Ω–æ–ø–∫–∏ —Å data-url –∞—Ç—Ä–∏–±—É—Ç–æ–º
                "[data-file]",                  // –≠–ª–µ–º–µ–Ω—Ç—ã —Å data-file
                "source[src]",                  // –¢–µ–≥–∏ source (—á–∞—Å—Ç–æ –¥–ª—è –º–µ–¥–∏–∞)
                "audio source[src]",            // –ò—Å—Ç–æ—á–Ω–∏–∫–∏ –¥–ª—è audio
                "video source[src]"             // –ò—Å—Ç–æ—á–Ω–∏–∫–∏ –¥–ª—è video
        };

        // –°–æ–±–∏—Ä–∞–µ–º –≤—Å–µ –Ω–∞–π–¥–µ–Ω–Ω—ã–µ —Å—Å—ã–ª–∫–∏
        java.util.ArrayList<String> links = new java.util.ArrayList<>();

        for (String selector : cssSelectors) {
            Elements elements = doc.select(selector);

            for (Element element : elements) {
                String url = null;

                // –ü–æ–ª—É—á–∞–µ–º URL –∏–∑ —Ä–∞–∑–Ω—ã—Ö –∞—Ç—Ä–∏–±—É—Ç–æ–≤
                if (element.hasAttr("href")) {
                    url = element.absUrl("href"); // –ê–±—Å–æ–ª—é—Ç–Ω—ã–π URL
                } else if (element.hasAttr("src")) {
                    url = element.absUrl("src");
                } else if (element.hasAttr("data-url")) {
                    url = element.absUrl("data-url");
                } else if (element.hasAttr("data-file")) {
                    url = element.attr("data-file");
                    // –î–µ–ª–∞–µ–º URL –∞–±—Å–æ–ª—é—Ç–Ω—ã–º, –µ—Å–ª–∏ –æ–Ω –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω—ã–π
                    if (!url.startsWith("http")) {
                        url = new URL(new URL(pageUrl), url).toString();
                    }
                }

                // –î–æ–±–∞–≤–ª—è–µ–º URL, –µ—Å–ª–∏ –æ–Ω –ø–æ–¥—Ö–æ–¥–∏—Ç –¥–ª—è —Å–∫–∞—á–∏–≤–∞–Ω–∏—è
                if (url != null && !url.isEmpty() && isDownloadableFile(url)) {
                    if (!links.contains(url)) {
                        links.add(url);
                        System.out.println("   ‚úì –ù–∞–π–¥–µ–Ω–∞: " + getFileName(url));
                    }
                }
            }
        }

        return links.toArray(new String[0]);
    }

    /**
     * –ü–†–û–í–ï–†–Ø–ï–¢, –ú–û–ñ–ù–û –õ–ò –°–ö–ê–ß–ê–¢–¨ –§–ê–ô–õ –ü–û –≠–¢–û–ô –°–°–´–õ–ö–ï
     */
    private static boolean isDownloadableFile(String url) {
        // –°–ø–∏—Å–æ–∫ —Ä–∞—Å—à–∏—Ä–µ–Ω–∏–π —Ñ–∞–π–ª–æ–≤ –¥–ª—è —Å–∫–∞—á–∏–≤–∞–Ω–∏—è
        String[] extensions = {
                // –ê—É–¥–∏–æ
                ".mp3", ".wav", ".ogg", ".flac", ".m4a", ".aac", ".wma",
                // –í–∏–¥–µ–æ
                ".mp4", ".avi", ".mkv", ".mov", ".wmv", ".flv", ".webm",
                // –ê—Ä—Ö–∏–≤—ã
                ".zip", ".rar", ".7z", ".tar", ".gz",
                // –î–æ–∫—É–º–µ–Ω—Ç—ã
                ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx",
                // –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
                ".jpg", ".jpeg", ".png", ".gif", ".bmp", ".svg", ".webp",
                // –ü—Ä–æ—á–µ–µ
                ".exe", ".msi", ".apk", ".dmg", ".iso"
        };

        url = url.toLowerCase();

        // –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ä–∞—Å—à–∏—Ä–µ–Ω–∏–µ —Ñ–∞–π–ª–∞
        for (String ext : extensions) {
            if (url.contains(ext) && !url.contains("?" + ext)) {
                return true;
            }
        }

        // –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥—Ä—É–≥–∏–µ –ø—Ä–∏–∑–Ω–∞–∫–∏ —Å–∫–∞—á–∏–≤–∞–Ω–∏—è
        return url.contains("download") ||
                url.contains("getfile") ||
                url.contains("file=") ||
                url.contains("download.php") ||
                url.contains("download.aspx");
    }

    /**
     * –ü–û–õ–£–ß–ê–ï–¢ –ò–ú–Ø –§–ê–ô–õ–ê –ò–ó URL
     */
    private static String getFileName(String url) {
        try {
            URL urlObj = new URL(url);
            String path = urlObj.getPath();

            // –ò–∑–≤–ª–µ–∫–∞–µ–º –∏–º—è —Ñ–∞–π–ª–∞ –∏–∑ –ø—É—Ç–∏
            if (path.contains("/")) {
                String name = path.substring(path.lastIndexOf("/") + 1);

                // –£–±–∏—Ä–∞–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä—ã, –µ—Å–ª–∏ –µ—Å—Ç—å
                if (name.contains("?")) {
                    name = name.substring(0, name.indexOf("?"));
                }

                if (!name.isEmpty()) {
                    return name;
                }
            }

            // –ï—Å–ª–∏ –Ω–µ –ø–æ–ª—É—á–∏–ª–æ—Å—å –∏–∑–≤–ª–µ—á—å –∏–º—è, –≤–æ–∑–≤—Ä–∞—â–∞–µ–º —á–∞—Å—Ç—å URL
            return url.length() > 50 ? url.substring(0, 50) + "..." : url;

        } catch (Exception e) {
            return url;
        }
    }

    /**
     * –°–ö–ê–ß–ò–í–ê–ï–¢ –í–´–ë–†–ê–ù–ù–´–ô –§–ê–ô–õ
     */
    private static void downloadSelectedFile(String fileUrl, int fileNumber) {
        System.out.println();
        System.out.println("=".repeat(50));
        System.out.println("üíæ –§–ê–ô–õ " + fileNumber + ": " + getFileName(fileUrl));
        System.out.println("=".repeat(50));

        try {
            // –°–æ–∑–¥–∞—é –∏–º—è —Ñ–∞–π–ª–∞ –¥–ª—è —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è
            String fileName = getFileName(fileUrl);
            if (fileName.length() > 100) {
                fileName = "file_" + fileNumber + "_" + System.currentTimeMillis() + ".tmp";
            }

            // –°–∫–∞—á–∏–≤–∞—é   —Ñ–∞–π–ª
            SimpleDownloader.downloadFile(fileUrl, fileName);

            System.out.println("‚úÖ –§–∞–π–ª " + fileNumber + " —É—Å–ø–µ—à–Ω–æ —Å–∫–∞—á–∞–Ω!");

        } catch (Exception e) {
            System.err.println("‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–∫–∞—á–∏–≤–∞–Ω–∏–∏ —Ñ–∞–π–ª–∞ " + fileNumber + ": " + e.getMessage());
        }
    }
}
